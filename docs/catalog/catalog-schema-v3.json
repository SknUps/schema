{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sknups.github.io/schema/catalog/catalog-schema-v2.json",
  "title": "catalog",
  "description": "the set of all SKUs",
  "type": "object",
  "properties": {
    "brand": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"]
      }
    },
    "sku": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "brand": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "maximum": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "permissions": {
            "type": "array",
            "items": {
              "enum": [
                "GIVEAWAY",
                "SELL",
                "DISCOVER",
                "METAPLEX_MINT"
              ]
            }
          },
          "price": {
            "anyOf": [
              {"type": "number"},
              {"type": "null"}
            ]
          },
          "rarity": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
          },
          "discover":  {
            "enum": [
              null,
              "STATIC",
              "VIDEO",
              "STREAMING"
            ]
          },
          "tier": {
            "anyOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          }
        },
        "additionalProperties": false,
        "required": [
          "brand",
          "description",
          "maximum",
          "name",
          "permissions",
          "price",
          "rarity",
          "discover"
        ]
      }
    }
  },
  "required": ["brand", "sku"]
}
