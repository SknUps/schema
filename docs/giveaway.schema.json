{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sknups.github.io/schema/giveaway.schema.json",
  "title": "giveaway",
  "description": "Describes a Giveaway which may be operated by the SKNUPS platform",
  "type": "object",
  "properties": {
    "claims": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/claims"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "claims"
  ],
  "definitions": {
    "claims": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]{6,62}[a-z0-9]$"
        },
        "type": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "publicKey": {
          "type": "string"
        },
        "config": {
          "type": "object",
          "properties": {
            "skuEntries": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/skuEntry"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "skuEntries"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "code",
        "type",
        "state",
        "title",
        "description",
        "config",
        "publicKey"
      ]
    },
    "skuEntry": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "weight": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "required": [
        "code",
        "weight"
      ]
    }
  }
}
