{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sknups.github.io/schema/collection.schema.json",
  "title": "collection",
  "description": "Describes a collection of SKU which may be loaded onto the SKNUPS platform",
  "type": "object",
  "properties": {
    "brands": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/brand"
      }
    },
    "platforms": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/platform"
      }
    },
    "skus": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sku"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "brand": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z0-9][A-Z0-9-]{0,22}[A-Z0-9]$"
        },
        "name": {
          "type": "string"
        },
        "wholesalerShare": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "code",
        "name",
        "wholesalerShare"
      ]
    },
    "platform": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "code",
        "name"
      ]
    },
    "sku": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string"
        },
        "brand": {
          "type": "string",
          "pattern": "^[A-Z0-9][A-Z0-9-]{0,22}[A-Z0-9]$"
        },
        "code": {
          "type": "string",
          "pattern": "^[A-Z0-9][A-Z0-9-]{0,62}[A-Z0-9]$"
        },
        "name": {
          "type": "string",
          "minLength": 5,
          "maxLength": 30
        },
        "description": {
          "type": "string"
        },
        "type": {
          "enum": [
            "LEGACY",
            "GIVEAWAY",
            "PREMIUM"
          ]
        },
        "discover": {
          "enum": [
            null,
            "STATIC",
            "VIDEO",
            "STREAMING"
          ]
        },
        "quantity": {
          "type": "integer",
          "minimum": 0
        },
        "rarity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5
        },
        "price": {
          "$ref": "#/definitions/price"
        },
        "permissions": {
          "type": "array",
          "items": {
            "enum": [
              "SELL",
              "DISCOVER"
            ]
          }
        },
        "mint": {
          "type": "array",
          "items": {
            "enum": [
              "SOLANA"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "brand",
        "code",
        "name",
        "description",
        "type",
        "discover",
        "quantity",
        "rarity",
        "permissions"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/sell-requires-price"
        }
      ]
    },
    "price": {
      "type": "object",
      "properties": {
        "retail": {
          "type": "integer",
          "minimum": 100,
          "maximum": 1000000
        },
        "wholesale": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000000
        }
      },
      "additionalProperties": false,
      "required": [
        "retail",
        "wholesale"
      ]
    },
    "sell-requires-price": {
      "if": {
        "type": "object",
        "properties": {
          "permissions": {
            "type": "array",
            "contains": {
              "type": "string",
              "const": "SELL"
            }
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "price": {
            "$ref": "#/definitions/price"
          }
        },
        "required": [
          "price"
        ]
      }
    }
  }
}
